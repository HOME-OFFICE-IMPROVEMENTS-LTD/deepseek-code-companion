// Place your settings in this file to overwrite default and user settings.
{
	"files.exclude": {
		"out": false, // set this to true to hide the "out" folder with the compiled JS files
		"dist": false // set this to true to hide the "dist" folder with the compiled JS files
	},
	"search.exclude": {
		"out": true, // set this to false to include "out" folder in search results
		"dist": true // set this to false to include "dist" folder in search results
	},
	// Turn off tsc task auto detection since we have the necessary tasks as npm scripts
	"typescript.tsc.autoDetect": "off",
	"editor.experimental.preferTreeSitter.regex": true,
	"diffEditor.experimental.useTrueInlineView": true,
	"workbench.commandPalette.preserveInput": true,
	"debug.allowBreakpointsEverywhere": true,
	"debug.console.acceptSuggestionOnEnter": "on",
	"debug.showBreakpointsInOverviewRuler": true,
	"terminal.integrated.accessibleViewPreserveCursorPosition": true,
	"terminal.integrated.ignoreBracketedPasteMode": true,
	"deepSeek.apiKey": "your-deepseek-api-key-here",
	"github.copilot.chat.agent.thinkingTool": true,
	"editor.defaultFormatter": "GitHub.copilot",
	"notebook.defaultFormatter": "GitHub.copilot",
	"deepseekCodeCompanion.deepseekApiKey": "your-deepseek-api-key-here",
	"deepseekCodeCompanion.openrouterApiKey": "your-openrouter-api-key-here",
	"chat.mcp.autostart": "newAndOutdated"
}
