{
  "name": "deepseek-code-companion",
  "displayName": "DeepSeek Code Companion",
  "description": "Your official AI partner in VS Code. Chat with DeepSeek and other models, generate code, and refactor with full context awareness.",
  "version": "0.0.1",
  "publisher": "Home & Office Improvements",
  "icon": "images/deepseek-icon-128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/HOME-OFFICE-IMPROVEMENTS-LTD/deepseek-code-companion.git"
  },
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "deepSeek-code-companion.focusChat",
        "title": "Focus DeepSeek Chat",
        "category": "DeepSeek"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deepseek-activity",
          "title": "DeepSeek",
          "icon": "images/deepseek-icon-24.png"
        }
      ]
    },
    "views": {
      "deepseek-activity": [
        {
          "type": "webview",
          "id": "deepSeekChatView",
          "name": "Chat",
          "icon": "images/DeepSeek-icon.png"
        }
      ]
    },
    "configuration": {
      "title": "DeepSeek Code Companion",
      "properties": {
        "deepseekCodeCompanion.deepseekApiKey": {
          "type": "string",
          "default": "",
          "description": "Your DeepSeek API key for accessing DeepSeek models",
          "order": 1
        },
        "deepseekCodeCompanion.openrouterApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenRouter API key for accessing 100+ AI models (optional)",
          "order": 2
        },
        "deepseekCodeCompanion.defaultModel": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "Default model to use for new conversations",
          "order": 3
        },
        "deepseekCodeCompanion.dailyCostLimit": {
          "type": "number",
          "default": 5.0,
          "minimum": 0.1,
          "maximum": 100.0,
          "description": "Daily API cost limit in USD to prevent accidental overspending",
          "order": 4
        },
        "deepseekCodeCompanion.autoSwitchToDeepSeek": {
          "type": "boolean",
          "default": true,
          "description": "Automatically switch to DeepSeek models for code-related queries",
          "order": 5
        },
        "deepseekCodeCompanion.showCostInChat": {
          "type": "boolean",
          "default": true,
          "description": "Display API usage cost in chat interface",
          "order": 6
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}