{
  "name": "hoiltd-deepseek-code-companion",
  "displayName": "HOILTD DeepSeek Code Companion",
  "description": "Professional AI coding assistant with DeepSeek integration, advanced automation features, and comprehensive development tools for VS Code.",
  "version": "1.0.0",
  "publisher": "hoiltd-com",
  "author": {
    "name": "MOHAMMAD AL-SOURI",
    "email": "info@hoiltd.co.uk"
  },
  "icon": "images/deepseek-icon-128.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/HOME-OFFICE-IMPROVEMENTS-LTD/deepseek-code-companion.git"
  },
  "homepage": "https://github.com/HOME-OFFICE-IMPROVEMENTS-LTD/deepseek-code-companion",
  "bugs": {
    "url": "https://github.com/HOME-OFFICE-IMPROVEMENTS-LTD/deepseek-code-companion/issues"
  },
  "keywords": [
    "ai",
    "deepseek", 
    "code-assistant",
    "automation",
    "security",
    "documentation",
    "testing",
    "phase5",
    "productivity"
  ],
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "qna": "marketplace",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "AI",
    "Machine Learning",
    "Other",
    "Testing",
    "Linters"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "deepSeek-code-companion.focusChat",
        "title": "Focus DeepSeek Chat",
        "category": "DeepSeek"
      },
      {
        "command": "deepseek.phase5.scanSecurity",
        "title": "Phase 5 - Security Scan",
        "category": "DeepSeek"
      },
      {
        "command": "deepseek.phase5.generateDocs",
        "title": "Phase 5 - Generate Documentation",
        "category": "DeepSeek"
      },
      {
        "command": "deepseek.phase5.generateTests",
        "title": "Phase 5 - Generate Tests",
        "category": "DeepSeek"
      },
      {
        "command": "deepseek.phase5.showMetrics",
        "title": "Phase 5 - Show Metrics Dashboard",
        "category": "DeepSeek"
      },
      {
        "command": "deepseek.phase5.runAutomation",
        "title": "Phase 5 - Run Automation",
        "category": "DeepSeek"
      },
      {
        "command": "deepseek.phase5.runTests",
        "title": "Phase 5 - Run Tests",
        "category": "DeepSeek"
      },
      {
        "command": "deepseek.phase5.demo",
        "title": "Phase 5 - Demo Features",
        "category": "DeepSeek"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "deepseek-activity",
          "title": "DeepSeek",
          "icon": "images/deepseek-icon-24.png"
        }
      ]
    },
    "views": {
      "deepseek-activity": [
        {
          "type": "webview",
          "id": "deepSeekChatView",
          "name": "Chat",
          "icon": "images/DeepSeek-icon.png"
        }
      ]
    },
    "configuration": {
      "title": "DeepSeek Code Companion",
      "properties": {
        "deepseekCodeCompanion.deepseekApiKey": {
          "type": "string",
          "default": "",
          "description": "Your DeepSeek API key for accessing DeepSeek models",
          "order": 1
        },
        "deepseekCodeCompanion.openrouterApiKey": {
          "type": "string",
          "default": "",
          "description": "Your OpenRouter API key for accessing 100+ AI models (optional)",
          "order": 2
        },
        "deepseekCodeCompanion.defaultModel": {
          "type": "string",
          "default": "deepseek-chat",
          "description": "Default model to use for new conversations",
          "order": 3
        },
        "deepseekCodeCompanion.dailyCostLimit": {
          "type": "number",
          "default": 5,
          "minimum": 0.1,
          "maximum": 100,
          "description": "Daily API cost limit in USD to prevent accidental overspending",
          "order": 4
        },
        "deepseekCodeCompanion.autoSwitchToDeepSeek": {
          "type": "boolean",
          "default": true,
          "description": "Automatically switch to DeepSeek models for code-related queries",
          "order": 5
        },
        "deepseekCodeCompanion.showCostInChat": {
          "type": "boolean",
          "default": true,
          "description": "Display API usage cost in chat interface",
          "order": 6
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^22.18.3",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.34.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "webpack": "^5.102.0",
    "webpack-cli": "^6.0.1"
  }
}
